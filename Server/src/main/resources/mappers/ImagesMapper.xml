<?xml version="1.0" encoding="UTF-8" ?>
<!-- <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> -->

<mapper namespace="com.yh.model.dao.ImagesDao">
    <!-- 이미지 추가 -->
    <insert id="insertImage" parameterType="com.yh.model.dto.Images">
        INSERT INTO images (review_id, image_url, created_at)
        VALUES (#{reviewId}, #{imageUrl}, NOW());
    </insert>

    <!-- 이미지 조회 (리뷰 ID 기준) -->
    <select id="getImagesByReviewId" resultType="com.yh.model.dto.Images">
        SELECT * FROM images WHERE review_id = #{reviewId};
    </select>

    <!-- 이미지 삭제 (리뷰 삭제 시) -->
    <delete id="deleteImagesByReviewId">
        DELETE FROM images WHERE review_id = #{reviewId};
    </delete>
</mapper>
